{
	"openapi": "3.0.0",
	"info": {
		"title": "inSync Project API",
		"description": "Essa API contém informações sobre o projeto inSync",
		"termsOfService": "http://localhost:3000/terms",
		"contact": {
			"email": "jeanhsouza@gmail.com"
		},
		"version": "1.0.0"
	},
	"servers": [
		{
			"url": "http://localhost:3000/",
			"description": "Ambiente de Teste"
		},
		{
			"url": "https://insync-api-v1-lnpi.onrender.com/",
			"description": "Ambiente de Produção"
		}
	],
	"paths": {
		"/users": {
			"post": {
				"summary": "Cadastro de novo usuário",
				"description": "Esta rota será responsável por criar um novo usuário",
				"tags": ["Users"],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/User"
							},
							"examples": {
								"user_default": {
									"value": {
										"name": "Gabriel1",
										"email": "rf.gabriel1@gmail.com",
										"nickname": "aeon1",
										"password": "12345678",
										"admin": false
									}
								}
							}
						}
					}
				},
				"responses": {
					"409": {
						"description": "Invalid Email or Invalid nickname"
					},
					"201": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
                                    "type": "object",
									"$ref": "#/components/schemas/User"
								}
							}
						}
					}
				}
			}
		},
        "/users/login":{
            "post":{
                "tags": ["Users"]
            }
        },
        "/users/{id}":{
            "delete":{"tags": ["Users"]},
            "patch":{"tags": ["Users"]}
        },
        "/users/profile":{
            "get":{"tags": ["Users"]}
        },
        "/users/profile/{nickname}":{
            "get":{"tags": ["Users"]}
        },
        "/projects":{
            "post":{"tags": ["Projects"]},
            "get":{"tags": ["Projects"]}
        },
        "/projects/{projectId}":{
            "patch":{"tags": ["Projects"]},
            "delete":{"tags": ["Projects"]}
        },
        "/technologies":{
            "post":{"tags": ["Technologies"]},
            "get":{"tags": ["Technologies"]}
        },
        "/technologies/{techId}":{
            "delete":{"tags": ["Technologies"]}
        },
        "/technologies/users":{
            "post":{"tags": ["Technologies", "Users"]},
            "delete":{"tags": ["Technologies", "Users"]}
        },
        "/technologies/projects/{projectId}":{
            "post":{"tags": ["Technologies", "Projects"]},
            "delete":{"tags": ["Technologies", "Projects"]}
        },
        "/teams/projects/{projectId}":{
            "post":{"tags": ["Teams"]}
        },
        "/teams/{projectId}/users/{userId}":{
            "put":{"tags": ["Teams"]},
            "delete":{"tags": ["Teams"]}
        }
	},
	"components": {
		"schemas": {
			"User": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"email": {
						"type": "string"
					},
					"nickname": {
						"type": "string"
					},
					"password": {
						"type": "string"
					},
					"admin": {
						"type": "boolean"
					}
				}
			},
            "Login": {
				"type": "object",
				"properties": {
					"user": {
						"type": "string"
					},
					"password": {
						"type": "string"
					}
				}
			},
            "Project": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
                    "description": {
						"type": "string"
					},
                    "devType": {
						"type": "string",
                        "enum": ["Front-End", "Back-End", "Full-Stack"]                     
					},
                    "maxUsers": {
						"type": "number"
					}
				}
			},
            "Tech": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					}
				}
			}
		},
        "securitySchemes":{
            "bearerAuth":{
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
	}
}
